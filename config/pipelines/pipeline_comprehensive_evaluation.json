        "variationType": "singleAttacks",
        "values": [
          "uc01_random_replay",
          "uc02_inverse_replay",
          "uc03_masquerade_fault",
          "uc04_masquerade_normal",
          "uc05_injection",
          "uc06_high_stnum_injection",
          "uc07_flooding",
          "uc08_grayhole"
        ],
